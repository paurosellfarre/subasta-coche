// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  password  String
  auctions  Auction[]
}

model Auction {
  id        Int      @id @default(autoincrement())
  title     String
  startingPrice Int
  currentPrice Int
  reservePrice Int
  address    String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  user      User     @relation(fields: [userId], references: [id])
  userId    Int
  vehicle   Vehicle  @relation(fields: [vehicleId], references: [id])
  vehicleId Int
}

model Vehicle {
  id        Int      @id @default(autoincrement())
  description String
  make      String
  model     String
  year      Int
  kilometers   Int
  color     String
  auctions  Auction[]
  images    Image[]
}

model Image {
  id         Int      @id @default(autoincrement())
  name       String
  binaryFile Bytes
  vehicle    Vehicle  @relation(fields: [vehicleId], references: [id])
  vehicleId  Int
}


// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  deletedAt DateTime?
  automobile  Automobile[]
}

model Automobile {
  id        Int      @id @default(autoincrement())
  description String?
  make      String
  model     String
  year      Int
  kilometers   Int
  color     String
  autoType  String
  fuelType  String
  offerType String  @default("sale")
  salePrice Int?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  deletedAt DateTime?
  user      User     @relation(fields: [userId], references: [id])
  userId    Int
  auctions  Auction[]
  images    Image[]
}

model Image {
  id         Int      @id @default(autoincrement())
  name       String
  binaryFile String
  automobile    Automobile  @relation(fields: [automobileId], references: [id])
  automobileId  Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  deletedAt DateTime?
}

model Auction {
  id        Int      @id @default(autoincrement())
  title     String
  startingPrice Int
  currentPrice Int
  reservePrice Int
  address    String
  automobile   Automobile  @relation(fields: [automobileId], references: [id])
  automobileId Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  deletedAt DateTime?
}

